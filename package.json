{
  "name": "@intavia/api-client",
  "version": "0.1.4",
  "license": "MIT",
  "type": "module",
  "source": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.cjs",
  "exports": {
    "types": "./dist/index.d.ts",
    "default": "./dist/index.modern.js"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "rm -rf dist && microbundle --format cjs,modern",
    "changeset:add": "changeset add",
    "changeset:publish": "changeset publish && git push --follow-tags",
    "changeset:version": "changeset version",
    "format:check": "prettier . --cache --check --ignore-path .gitignore",
    "format:fix": "pnpm run format:check --write",
    "lint:check": "eslint . --cache --ignore-path .gitignore",
    "lint:fix": "pnpm run lint:check --fix",
    "prepare": "run-s setup",
    "prepublishOnly": "pnpm run build",
    "setup": "simple-git-hooks || exit 0",
    "test": "exit 0",
    "types:check": "tsc --noEmit",
    "validate": "run-p format:check lint:check types:check test"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=7"
  },
  "packageManager": "pnpm@7.18.1",
  "dependencies": {
    "@stefanprobst/assert": "^1.0.3",
    "@stefanprobst/request": "^0.2.1",
    "@types/geojson": "^7946.0.10",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.7",
    "@changesets/cli": "^2.25.2",
    "@commitlint/cli": "^17.3.0",
    "@stefanprobst/commitlint-config": "^1.0.3",
    "@stefanprobst/eslint-config": "^1.0.10",
    "@stefanprobst/eslint-config-node": "^4.0.0",
    "@stefanprobst/prettier-config": "^2.0.3",
    "@stefanprobst/tsconfig": "^2.2.2",
    "eslint": "^8.29.0",
    "lint-staged": "^13.1.0",
    "microbundle": "^0.15.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^4.9.4"
  },
  "commitlint": {
    "extends": "@stefanprobst/commitlint-config"
  },
  "eslintConfig": {
    "extends": [
      "@stefanprobst/eslint-config",
      "@stefanprobst/eslint-config-node"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "eslint --cache --fix",
      "prettier --cache --write"
    ],
    "*.!(ts)": "prettier --cache --ignore-unknown --write"
  },
  "prettier": "@stefanprobst/prettier-config",
  "simple-git-hooks": {
    "commit-msg": "pnpm exec commitlint --edit",
    "pre-commit": "pnpm exec lint-staged",
    "pre-push": "pnpm run validate"
  }
}
