{
  "name": "@intavia/api-client",
  "version": "0.1.3",
  "license": "MIT",
  "type": "module",
  "source": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.cjs",
  "exports": {
    "types": "./dist/index.d.ts",
    "default": "./dist/index.modern.js"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "rimraf dist && microbundle --format cjs,modern",
    "format": "prettier . --cache --check --ignore-path .gitignore",
    "format:fix": "npm run format -- --write",
    "lint": "eslint . --cache --ignore-path .gitignore",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "run-s setup",
    "prepublishOnly": "npm run build",
    "setup": "simple-git-hooks || exit 0",
    "typecheck": "tsc --noEmit",
    "test": "exit 0",
    "validate": "run-s format lint typecheck test"
  },
  "dependencies": {
    "@stefanprobst/assert": "^1.0.3",
    "@stefanprobst/request": "^0.2.1",
    "@types/geojson": "^7946.0.10",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@stefanprobst/commitlint-config": "^1.0.3",
    "@stefanprobst/eslint-config": "^1.0.5",
    "@stefanprobst/prettier-config": "^2.0.2",
    "@stefanprobst/tsconfig": "^2.2.1",
    "eslint": "^8.27.0",
    "lint-staged": "^13.0.3",
    "microbundle": "^0.15.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.0",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^4.9.3"
  },
  "commitlint": {
    "extends": [
      "@stefanprobst/commitlint-config"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@stefanprobst/eslint-config"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "eslint --cache --fix",
      "prettier --cache --write"
    ],
    "*.@(json|md)": [
      "prettier --cache --write"
    ]
  },
  "prettier": "@stefanprobst/prettier-config",
  "simple-git-hooks": {
    "commit-msg": "npx commitlint --edit",
    "pre-commit": "npx lint-staged",
    "pre-push": "npm run validate"
  }
}
